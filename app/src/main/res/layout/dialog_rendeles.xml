<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KAJA NEVE"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/dialog_rendeles_cim"/>

    <TextView
        android:id="@+id/dialog_rendeles_leiras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_rendeles_cim"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:text="KAJA LEIÍRÁSA"
        android:textAlignment="center"
        android:textSize="20dp" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/dialog_rendeles_kep"
        android:layout_below="@+id/dialog_rendeles_leiras"
        android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/dialog_rendeles_kep">


            <Button
                android:id="@+id/dialog_rendeles_minusz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginLeft="40dp"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/dialog_rendeles_szam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="40dp"
                android:layout_marginLeft="40dp"/>/>
            <Button
                android:id="@+id/dialog_rendeles_plusz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_marginLeft="40dp"
                android:textSize="25dp"/>



        </LinearLayout>
</RelativeLayout>